# =====================================================
# ALB MASTER - AMBIENTE STAGING
# =====================================================

# Configuración básica
ALB_MASTER_ENABLED=true
ENVIRONMENT=staging
NAMESPACE=staging

# ALB Configuration
ALB_GROUP_NAME=staging-alb-group
ALB_LOAD_BALANCER_NAME=staging-master-alb
ALB_SCHEME=internet-facing
ALB_LISTEN_PORTS='[{"HTTP":80},{"HTTPS":443}]'
ALB_HEALTHCHECK_PATH=/health
ALB_SUBNETS=subnet-staging1,subnet-staging2
ALB_SECURITY_GROUPS=sg-staging-alb

# SSL/TLS
SSL_ENABLED=true
SSL_REDIRECT=443
SSL_CERTIFICATE_ARN=arn:aws:acm:us-west-2:123456789012:certificate/staging-cert-id
SSL_POLICY=ELBSecurityPolicy-TLS-1-2-2017-01

# mTLS (opcional en staging)
MTLS_ENABLED=false
MTLS_MUTUAL_AUTHENTICATION=

# WAF (habilitado en staging)
WAF_ENABLED=true
WAF_ACL_ARN=arn:aws:wafv2:us-west-2:123456789012:regional/webacl/staging-waf/staging-acl-id

# Default Backend
DEFAULT_BACKEND_ENABLED=true
DEFAULT_BACKEND_REPLICAS=2