# =====================================================
# ALB MASTER - AMBIENTE PRODUCCIÓN
# =====================================================

# Configuración básica
ALB_MASTER_ENABLED=true
ENVIRONMENT=prod
NAMESPACE=prod

# ALB Configuration
ALB_GROUP_NAME=prod-alb-group
ALB_LOAD_BALANCER_NAME=prod-master-alb
ALB_SCHEME=internet-facing
ALB_LISTEN_PORTS='[{"HTTP":80},{"HTTPS":443}]'
ALB_HEALTHCHECK_PATH=/health
ALB_SUBNETS=subnet-prod1,subnet-prod2,subnet-prod3
ALB_SECURITY_GROUPS=sg-prod-alb

# SSL/TLS
SSL_ENABLED=true
SSL_REDIRECT=443
SSL_CERTIFICATE_ARN=arn:aws:acm:us-west-2:123456789012:certificate/prod-cert-id
SSL_POLICY=ELBSecurityPolicy-TLS-1-2-2017-01

# mTLS (habilitado en prod para seguridad)
MTLS_ENABLED=true
MTLS_MUTUAL_AUTHENTICATION='[{"port": 443, "mode": "verify", "trustStore": "arn:aws:elasticloadbalancing:us-east-1:161156235207:truststore/trust-store-poc2/299a875c96c72541", "ignoreClientCertificateExpiry": false}]'

# WAF (habilitado en prod)
WAF_ENABLED=true
WAF_ACL_ARN=arn:aws:wafv2:us-west-2:123456789012:regional/webacl/prod-waf/prod-acl-id

# Default Backend
DEFAULT_BACKEND_ENABLED=true
DEFAULT_BACKEND_REPLICAS=3